<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" id="WebApp_ID" version="3.1">
  <display-name>PracticeAdvanceJava</display-name>

<!-- Web.xml is also called as Deployment descriptor-->


<!--after clicking submit the server should know where to go
	for that we are mapping this package and class or servlet below-->
<servlet> 
	<servlet-name>name</servlet-name>
	<servlet-class>com.servlet.RequestServlet</servlet-class> 
	
	<init-param>  
      <param-name>AR</param-name>  
      <param-value>Aravindha Rajan</param-value>  
    </init-param>  
    
</servlet>
<!--we particularly mapping the action here-url pattern-->
<servlet-mapping>
	<servlet-name>name</servlet-name>
	<url-pattern>/input</url-pattern>
</servlet-mapping>

<servlet> 
	<servlet-name>squareNumber</servlet-name>
